{
  "AllowedHosts": "*",
  "DatabaseConfigs": {
    "ConnectionString": "Server=localhost;Database=VoyageDb;Trusted_Connection=True;Application Name=VoyageAPI"
  },
  "Serilog": {
    "MinimumLevel": "Debug",
    "Override": {
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:HH:mm:ss zzz} [{Level:u4}] (Thread:{ThreadId} Process:{ProcessId} Version:{AssemblyVersion:true} {Message:} {NewLine:} {Exception:}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:HH:mm:ss zzz} [{Level:u4}] (Thread:{ThreadId} Process:{ProcessId} Version:{AssemblyVersion} Source:<{SourceContext}> {Message:} {NewLine:} {Exception:}",
          "path": "../Logs/log.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithAssemblyVersion"
    ]
  }
}
